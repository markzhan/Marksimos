                                <span class="count"><%= campaign.totalMembers %> {{'CampaignListPageJoinedCountPrefix' | translate}}{{campaign.totalMembers > 1 ? 'CampaignListPageJoinedCountPlural' : '' | translate}} {{'CampaignListPageJoinedCountSuffix' | translate}}</span>
